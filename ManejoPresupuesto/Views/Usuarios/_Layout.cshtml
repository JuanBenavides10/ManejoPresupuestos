<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManejoPresupuesto</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- asp-append-version="true" esto permite forzar al navegador a cargar la version mas reciente del archivo-->
    <!-- Sin esto, los navegadores pueden usar versiones antiguas en caché, lo que causa errores visuales o funcionales cuando -->
    <!-- actualizamos archivos .css o .js -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ManejoPresupuesto.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />

</head>
<body style="margin:0">
    <div class="container">
        <div class="row align-items-center" style="height: 100vh">
            <div class="col" style="margin-right: 5rem">
                <h1>
                    Manejo Presupuestos
                </h1>
                <h4>En esta aplicacion podras manejar tus finanzas</h4>
            </div>
            <main role="main" class="pb-3 col">
                @RenderBody() <!-- Aquí se inyecta el contenido de cada vista -->
            </main>
        </div>
    </div>

  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false) <!--Toma el contenido de section Scripts de cada vista y los ubica aqui, despues de los scripts principales-->
</body>
</html>
