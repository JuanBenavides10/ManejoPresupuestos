@model PaginacionRespuesta<Categoria> //IEnumerable<Categoria>

@{
	ViewData["Title"] = "Categorias";
}

<h1>Categorias</h1>
<h5>La categoria nos permite indicar en que gastamos nuestro dinero, tambien, 
	de donde provienen nuestros ingresos.</h5>

<a asp-controller="Categorias" asp-action="Crear" class="btn btn-primary mb-3">Crear Nuevo</a>

<div class="row">
	<label>Cantidad de registros a mostrar: </label>
	<div class="mb-3 col-auto">
		<select asp-for="@Model.RecordsPorPagina" id="cantidadRecordsPorPagina" class="form-select">
			<option>3</option>
			<option>5</option>
			<option>10</option>
			<option>25</option>
		</select>
	</div>
</div>

<partial name="_Paginacion"/>

<table class="table">
	<thead>
		<tr>
			<th>Acciones</th>
			<th>Nombre</th>
			<th>Tipo</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var categoria in Model.Elementos)
		{
			<tr>
				<td>
					<!-- asp-route-id -> agrega un id en la URL -->
					<a class="btn btn-primary" asp-controller="Categorias" asp-action="Editar" asp-route-id="@categoria.Id">Editar</a>
					<a class="btn btn-danger" asp-controller="Categorias" asp-action="Borrar" asp-route-id="@categoria.Id">Borrar</a>
				</td>
				<td>
					@categoria.Nombre
				</td>
				<td>
					@categoria.TipoOperacionId.ToString()
				</td>
			</tr>
		}
		</tbody>
	</table>


@section Scripts{
	<script>
		//usamos JQuery

				$("#cantidadRecordsPorPagina").change(function(){ //se dispara el evento change cuando el valor del <select> cambia.
				const recordsPorPagina = $(this).val(); //obtenemos el valor del elemento que disparo el evento

						location.href= `/categorias/?pagina=1&recordsPorPagina=${recordsPorPagina}`; //Redirige al navegador a una nueva URL.

			});

	</script>
}